<!DOCTYPE html>

<html>

<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</head>

<body>

    <div class="container">

        <nav class="navbar bg-dark navbar-dark">

            <a class="navbar-brand" asp-controller="OnlineShop" asp-action="Home"> Home </a>

            <ul class="nav">

                <li class="nav-item">

                    <a class="nav-link" asp-controller="OnlineShop" asp-action="ViewProduct"> ViewProduct </a>

                </li>

                <li class="nav-item">
                    @{
                       if (Context.Session.GetString("uid") != null)
                       {
                            <a class="nav-link" asp-controller="OnlineShop" asp-action="Logout"> Logout </a>
                        }
                        else 
                        {
                            
                            <a class="nav-link" asp-controller="OnlineShop" asp-action="Login"> Login </a>
                        }
                    }
                </li>

                <li class="nav-item" >

                    <a class="nav-link" asp-controller="OnlineShop" asp-action="Buy"> Buy </a>

                </li>

                <li class="nav-item">

                    <a class="nav-link" asp-controller="OnlineShop" asp-action="Feedback"> Feedback </a>

                </li>

            </ul>

            <form class="d-flex justify-content-end" method="get" asp-controller="OnlineShop" asp-action="Search">

                <input class="form-control me-2" name="txtsearch" type="text" placeholder="Search">

                <button class="btn btn-success" type="submit" >Search</button>

            </form>

            @{
                if (Context.Session.GetString("uid") == null)
                {
                    <span style ="color: yellow">Welcome: Guest</span>
                }
                else
                {
                    <span style="color: yellow">Welcome: @Context.Session.GetString("uid")</span>
                }
            }

        </nav>
        <div>
            @RenderBody()
        </div>

    </div>

</body>



</html>
